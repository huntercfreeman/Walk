@using Walk.Common.RazorLib.Menus.Displays

@{
    var menu = GetMenuRecord(TreeViewCommandArgs);
    var elementIdOfComponentRenderingThis = TreeViewCommandArgs.TreeViewContainer?.ElementIdOfComponentRenderingThis;
    if (!string.IsNullOrWhiteSpace(elementIdOfComponentRenderingThis))
    {
        menu.ElementIdToRestoreFocusToOnClose = elementIdOfComponentRenderingThis;
    }
}

<MenuDisplay Menu="menu"/>
