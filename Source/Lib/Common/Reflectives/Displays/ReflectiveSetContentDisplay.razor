<div class="di_set-content">
    @if (ParameterInfo.ParameterType == typeof(Guid))
    {
        <div>
            <span class="di_te_type">
                Guid
            </span>
            .
            <span class="di_te_method">
                TryParse
            </span>
            (
                <input class="di_ide_input di_ide_input-text"
                       @bind="Input"
                       @bind:event="oninput" />
            )
        </div>

        <div>
            (DEBUG: @@TextEditorViewModelKey.Guid: @TextEditorViewModelKey.Guid)
        </div>
    }
    else if (ParameterInfo.ParameterType == typeof(string))
    {
        <div>
            <input class="di_ide_input di_ide_input-text"
                   @bind="Input"
                   @bind:event="oninput" />
        </div>
    }
</div>